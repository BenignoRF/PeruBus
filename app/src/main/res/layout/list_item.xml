<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/viewBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:paddingRight="15dp"
                android:src="@drawable/bus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fechaProg"
                android:text="fechaProg"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="26sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/codBus"
                android:paddingStart="60dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="codBus"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-80dp"
            android:layout_toEndOf="@+id/viewBus"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tipoServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingTop="20dp"
                android:text="tipoServicio"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/viewDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="0dp"
                    android:text="duracion"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="10dp"
                    android:text="distancia"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/map3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingStart="0dp"
                    android:text="map3"
                    android:textColor="@color/black" />
            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/repeat_background"
                android:text="Seleccionar" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>